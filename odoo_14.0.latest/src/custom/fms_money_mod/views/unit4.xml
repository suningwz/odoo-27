<odoo>
    <data>
        <record id='bag_action' model='ir.actions.act_window'>
            <field name="name">solicitudes_bolsa</field>
            <field name="res_model">solicitudes.bolsa</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="event_tag_view_tree" model="ir.ui.view">
            <field name="name">solicitudes_bolsa.tree</field>
            <field name="model">solicitudes.bolsa</field>
            <field name="arch" type="xml">
                <tree string="Event Tags Categories">
                    <field name="bolsa_total"/>
                    <field name="personal"/>
                    <field name="solicitado"/>
                    <field name="estado"/>
                </tree>
            </field>
        </record>
        <record id="bag_form" model="ir.ui.view">
            <field name="name">solicitudes_bolsa.form</field>
            <field name="model">solicitudes.bolsa</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Personal">
                        <div class="container">
                            <field name="estado" invisible="1"/>
                            <div class="mb-3">
                                <p class="h3">Tecnico</p>
                                <field name="personal" string="Tecnico" domain="[('function', '=', 'TECNICO')]"/>
                            </div>
                            <div class="h3">
                                <p class="fs-3">Dinero a solicitar</p>
                                <field name="bolsa_dineros"/>
                            </div>
                            <div class="h3" attrs="{'invisible': [('estado', '!=', 'p3')]}">
                                <p class="fs-3">Motivo</p>
                                <field name="motivo"/>
                            </div>
                        </div>
                    </group>
                    <group string="AprobaciÃ³n" id="bolsa_app" groups="fms_money_mod.view_bag_money">
                        <div class="container">
                            <field name="estado" invisible="1"/>
                            <div class="h3">
                                <p class="fs-3">Total actual</p>
                                <field name="bolsa_total" readonly="1" force_save="1"/>
                            </div>
                            <div class="h3">
                                <p class="fs-3">Quien solicita</p>
                                <field name="solicitado" force_save="1" readonly="1"/>
                            </div>
                            <div class="h3" attrs="{'invisible': [('estado', '!=', 'p1')]}">
                                <p class="fs-3">Motivo</p>
                                <field name="motivo"/>
                            </div>
                            <div class="container">
                                <div class="row">
                                    <button name="aprovacion_exporte" icon="fa-arrow-right" type="object" string="Aprobar" class="btn-primary col-md-4"/>
                                    <p class="col-md-4"></p>
                                    <button name="cancelado" icon="fa-arrow-right" type="object" string="Cancelar" class="btn-primary col-md-4"/>
                                </div>
                            </div>
                        </div>
                    </group>
                </form>
            </field>
        </record>

        <menuitem
                action="bag_action"
                id="action_menu1"
                parent="hr_expense.menu_hr_expense_root"
                name="Bolsas"
                sequence="1"/>
    </data>
</odoo>