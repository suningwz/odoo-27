            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority" eval="31"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bank_account_id']" position="replace" readonly="1" force_save="1">
                        <field name="Cuenta" string="Cuenta Bancaria"/>
                </xpath>
            </field>
       </record>
    </data>
</odoo>