<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="description_replace" model="ir.ui.view">
            <field name="name">replace.description</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="priority" eval="31"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='description_page']/field[@name='description']" position="replace">
                        <field name="modificacion_descripcion"/>
                </xpath>
            </field>
       </record>
    </data>
</odoo>